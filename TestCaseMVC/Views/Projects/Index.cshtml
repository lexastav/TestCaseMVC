@model TestCaseMVC.Models.ProjectAuthorViewModel
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-controller="Projects" asp-action="Index" method="get">
    <p>
        Author: <select asp-for="ProjectAuthor" asp-items="Model.Authors">
            <option value="">All</option>
        </select> 
        Project: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Search" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Projects[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Projects[0].Author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Projects[0].Stargazers)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Projects[0].Watchers)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Projects[0].Url)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Projects) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stargazers)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Watchers)
            </td>
            <td>
                <a href="@Html.DisplayFor(modelItem => item.Url)">url project</a>
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
